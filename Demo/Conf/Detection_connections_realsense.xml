<application>

    <name>Online-Detection-Demo</name>

    <dependencies>

    </dependencies>

    <!-- Modules -->
    <module>
        <name>yarpview</name>
        <parameters>--name /detection/view --x 1300</parameters>
        <node>localhost</node>
    </module>

    <!-- Connections -->

    <connection>
        <from>/depthCamera/rgbImage:o</from>
        <to>/detection/img:i</to>
        <protocol>tcp</protocol>
    </connection> 
    <connection>
        <from>/dispBlobber/roi/left:o</from>
        <to>/detection/annotations:i</to>
        <protocol>tcp</protocol>
    </connection>  

    <connection>
        <from>/command:o</from>
        <to>/detection/command:i</to>
        <protocol>tcp</protocol>
    </connection> 

    <!--detHandler connections -->
    <connection>
        <from>/detection/dets:o</from>
        <to>/detHandler/detections:i</to>
        <protocol>tcp</protocol>
    </connection> 
    <connection>
        <from>/detection/img:o</from>
        <to>/detHandler/image:i</to>
        <protocol>tcp</protocol>
    </connection> 
    <connection>
        <from>/detHandler/image:o</from>
        <to>/detection/view</to>
        <protocol>tcp</protocol>
    </connection> 
</application>

