<application>
    <name>Detection demo - ICUB</name>

    <dependencies>
    </dependencies>

    <module>
        <name>yarpdev</name>
        <parameters>--device speech --lingware-context speech --default-language en-GB --robot icub --pitch 80 --speed 100</parameters>
        <node>icub21</node>
    </module>

    <module>
        <name>iSpeak</name>
        <parameters>--package speech-dev</parameters>
        <node>icub21</node>
    </module>

    <module>
        <name>SFM</name>
        <parameters></parameters>
        <node>icub22</node>
    </module>

    <module>
        <name>actionsRenderingEngine</name>
        <parameters></parameters>
        <node>icub21</node>
    </module>

    <module>
        <name>speechRecognizer</name>
        <parameters></parameters>
        <node>icub-win1</node>
    </module>

     <module>
        <name>detection_image.lua</name>
        <parameters>icub</parameters>
        <deployer>lua</deployer>
        <node>icub21</node>
    </module>
    <module>
        <name>detection_speech_helper.lua</name>
        <parameters></parameters>
        <deployer>lua</deployer>
        <node>icub21</node>
        <dependencies>
            <port timeout="10">/detection-image/image:i</port>
            <port timeout="10">/detection-image/image:o</port>
            <port timeout="10">/detection-image/cmd:i</port>
        </dependencies>
    </module>

    <module>
        <name>detection_demo.lua</name>
        <parameters>icub</parameters>
        <deployer>lua</deployer>
        <node>icub21</node>
        <dependencies>
            <port timeout="10">/speechRecognizer/rpc</port>
        </dependencies>
    </module>

    <module>
        <name>yarpview</name>
        <node>icub22</node>
        <parameters>--name /viewOut --x 0 --y 0 --w 500 --h 480 --RefreshTime 33 </parameters>
    </module>

    <module>
        <name>yarpview</name>
        <node>icub22</node>
        <parameters>--name /pyfaster:vis --x 600 --y 0 --w 500 --h 480 --RefreshTime 33 </parameters>
    </module>

    <module>
        <name>yarpview</name>
        <node>icub22</node>
        <parameters>--name /disparity --x 1140 --y 0 --w 500 --h 480 --RefreshTime 33 </parameters>
    </module>

    <!--connections for speech -->

     <connection>
        <from>/iSpeak/speech-dev/rpc</from>
        <to>/icub/speech:rpc</to>
        <protocol>tcp</protocol>
    </connection>


    <!--connections for detection image -->

    <connection>
        <from>/pyfaster:imgout </from>
        <to>/detection-image/image:i</to>
        <protocol> fast_tcp </protocol>
    </connection>

    <connection>
        <from>/detection-image/image:o</from>
        <to>/viewOut</to>
        <protocol>fast_tcp</protocol>
    </connection>

    <!--connections for detection -->

    <connection>
        <from>/pyfaster:detout</from>
        <to>/detection/targets:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/detection/speech:o</from>
        <to>/detection/cmd:i</to>
        <protocol>tcp </protocol>
    </connection>

     <connection>
        <from>/pyfaster:detimgout</from>
        <to>/pyfaster:vis</to>
        <protocol>fast_tcp</protocol>
    </connection>

    <connection>
        <from>/icub/camcalib/left/out</from>
        <to>/pyfaster:in</to>
        <protocol>fast_tcp</protocol>
    </connection>

    <connection>
        <from>/icub/camcalib/left/out</from>
        <to>/SFM/left:i</to>
        <protocol>fast_tcp</protocol>
    </connection>

    <connection>
        <from>/icub/camcalib/right/out</from>
        <to>/SFM/right:i</to>
        <protocol>fast_tcp</protocol>
    </connection>
     <connection>
        <from>/SFM/disp:o</from>
        <to>/disparity</to>
        <protocol>fast_tcp</protocol>
    </connection>

</application>


